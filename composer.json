{
    "name": "aplus/app",
    "type": "project",
    "description": "Aplus Framework App Project",
    "keywords": [
        "app",
        "application",
        "libraries",
        "mvc",
        "database",
        "routing",
        "http",
        "config",
        "session",
        "skeleton",
        "project"
    ],
    "homepage": "https://aplus-framework.com/docs/app",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "aplus/mvc": "dev-master"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "aplus/coding-standard": "^1.9",
        "aplus/testing": "dev-master",
        "ergebnis/composer-normalize": "^2.15",
        "jetbrains/phpstorm-attributes": "^1.0",
        "natanfelles/php-server": "^2.11",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "App.php"
        ],
        "files": [
            "extra/bootstrap.php",
            "extra/constants.php",
            "extra/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"chmod(__DIR__ . '/storage/cache', 0777);\"",
            "php -r \"chmod(__DIR__ . '/storage/logs', 0777);\"",
            "php -r \"chmod(__DIR__ . '/storage/sessions', 0777);\"",
            "php -r \"chmod(__DIR__ . '/storage/uploads', 0777);\""
        ]
    }
}
